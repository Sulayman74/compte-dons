model User {
  action          Action         @default(READ)
  createdAt       DateTime       @default(now())
  destinataires   Destinataire[]
  donations       Donation[]
  email           String         @unique
  firstname       String
  id              String         @id @default(uuid())
  isAuthenticated Boolean        @default(false)
  lastname        String
  password        String
  phoneNumber     String
  role            Role           @default(USER)
  updatedAt       DateTime?      @default(now())
}

model Destinataire {
  city        String?
  country     String?
  createdAt   DateTime?  @default(now())
  donation    Donation[]
  email       String?
  firstname   String
  id          String     @id @default(uuid())
  isFamily    Boolean    @default(true)
  lastname    String
  phoneNumber String?
  street      String?
  updatedAt   DateTime?  @default(now())
  user        User?      @relation(fields: [userId], references: [id])
  userId      String?
  zipcode     String?
}

model Donation {
  amount         Int
  archived       Boolean      @default(false)
  archiveId      Int?
  archiveIn      Archive?     @relation(fields: [archiveId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  createdAt      DateTime     @default(now())
  description    String?
  destinataire   Destinataire @relation(fields: [destinataireId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  destinataireId String
  id             String       @id @default(uuid())
  updatedAt      DateTime?    @default(now())
  user           User         @relation(fields: [userId], references: [id])
  userId         String
}

model Archive {
  archivedAt DateTime   @default(now())
  donations  Donation[]
  id         Int        @id @default(autoincrement())
}

enum Role {
  ADMIN
  USER
}

enum Action {
  MANAGE
  CREATE
  READ
  UPDATE
  DELETE
}
