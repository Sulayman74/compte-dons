generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  action          Action         @default(READ)
  createdAt       DateTime       @default(now())
  donations       Donation[]
  email           String         @unique
  firstname       String
  id              String         @id @default(uuid())
  isAuthenticated Boolean        @default(false)
  lastname        String
  password        String
  phoneNumber     String
  role            Role           @default(USER)
  destinataires   Destinataire[]
}

model Destinataire {
  city        String?
  country     String?
  donation    Donation[]
  email       String?
  firstname   String
  id          String     @id @default(uuid())
  isFamily    Boolean
  lastname    String
  phoneNumber String?
  street      String?
  zipcode     String?
  user        User?      @relation(fields: [userId], references: [id])
  userId      String?
}

model Donation {
  amount         Int
  archived       Boolean
  archiveId      Int?
  archiveIn      Archive?      @relation(fields: [archiveId], references: [id])
  createdAt      DateTime      @default(now())
  destinataire   Destinataire? @relation(fields: [destinataireId], references: [id])
  destinataireId String
  id             String        @id @default(uuid())
  user           User?         @relation(fields: [userId], references: [id])
  userId         String?
}

model Archive {
  archivedAt DateTime   @default(now())
  donations  Donation[]
  id         Int        @id @default(autoincrement())
}

enum Role {
  ADMIN
  USER
}

enum Action {
  CREATE
  DELETE
  MANAGE
  READ
  UPDATE
}
